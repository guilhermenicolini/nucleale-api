{
  "name": "nucleale-api",
  "version": "1.0.0",
  "description": "Official Nucleale API",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --require tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules src/index.ts",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:unit": "npm test -- --watch --config jest-unit.config.js",
    "test:integration": "npm test -- --watch --config jest-integration.config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guilhermenicolini/nucleale-api.git"
  },
  "keywords": [],
  "author": "Guilherme Nicolini",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/guilhermenicolini/nucleale-api/issues"
  },
  "homepage": "https://github.com/guilhermenicolini/nucleale-api#readme",
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/node": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/faker": "^5.1.7",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.34",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.22.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "faker": "^5.4.0",
    "git-commit-msg-linter": "^3.0.3",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "ts-jest": "^26.5.3",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  }
}
