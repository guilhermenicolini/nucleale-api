{
  "name": "nucleale-api",
  "version": "1.17.0",
  "description": "Official Nucleale API",
  "main": "functions/server.js",
  "scripts": {
    "dev": "ts-node-dev --require dotenv/config --require tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules src/main/server.ts",
    "prod": "npm run dev -- dotenv_config_path=.env.prod",
    "test": "TZ=UTC jest --passWithNoTests --noStackTrace --runInBand",
    "test:unit": "npm test -- --watch --config jest-unit.config.js",
    "test:integration": "npm test -- --watch --config jest-integration.config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node dist/main/server.js",
    "test:coveralls": "npm run test:ci && coveralls -v < coverage/lcov.info",
    "prepare": "husky install",
    "check": "npm-check -u -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guilhermenicolini/nucleale-api.git"
  },
  "keywords": [],
  "author": "Guilherme Nicolini",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/guilhermenicolini/nucleale-api/issues"
  },
  "homepage": "https://github.com/guilhermenicolini/nucleale-api#readme",
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.7",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@shelf/jest-mongodb": "^2.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/email-templates": "^8.0.4",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.11",
    "@types/svg-to-pdfkit": "^0.1.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.1",
    "@types/xml-crypto": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "coveralls": "^3.1.1",
    "dotenv": "^16.0.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^4.1.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "mockdate": "^3.0.5",
    "npm-check": "^5.9.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.14.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.18.2",
    "@wppconnect-team/wppconnect": "^1.9.4",
    "bcrypt": "^5.0.1",
